pkgname=clantodesk
pkgver=1.4.5
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/share/clantodesk" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/share/clantodesk"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/share/clantodesk/clantodesk usr/bin/clantodesk && popd
  install -Dm 644 $HBB/res/clantodesk.service -t "${pkgdir}/usr/share/clantodesk/files"
  install -Dm 644 $HBB/res/clantodesk.desktop -t "${pkgdir}/usr/share/clantodesk/files"
  install -Dm 644 $HBB/res/clantodesk-link.desktop -t "${pkgdir}/usr/share/clantodesk/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/clantodesk.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/clantodesk.svg"
}
